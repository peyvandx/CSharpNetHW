@model GradingStudentsDTO

<form asp-controller="" asp-action="">
    <table class="table">
        <thead>
            <tr>
                <input hidden asp-for="CourseID">@ViewBag.CourseId</input>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Grade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in ViewBag.EnrolledStudents)
            {
                <tr>
                <input hidden asp-for="StudentID" value="@student.ID"></input>
                <input hidden asp-for="Email" value="@student.Email"></input>
                    @* <th hidden>@ViewBag.CourseId</th> *@
                    <th>@student.FirstName</th>
                    <td>@student.LastName</td>
                    <td>@student.Email</td>
                    <td><input class="input-sm form-control-sm" type="number" asp-for="Grade" /></td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-outline-warning">ثبت نمرات</button>
</form>